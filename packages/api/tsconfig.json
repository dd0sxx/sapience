{
    "compilerOptions": {
      "target": "ES2020",
      "module": "ESNext",
      "moduleResolution": "node",
      "jsx": "preserve",
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "skipLibCheck": true,
      "strictPropertyInitialization": false,
      "resolveJsonModule": true,
      "baseUrl": ".",
      "paths": {},
      "sourceMap": true,
      "inlineSources": true,
      "sourceRoot": "/"
    },
    "include": ["src"],
    "exclude": ["node_modules", "**/*.spec.ts", "src/graphql/types/generated.ts"]
  }
  