{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "incremental": false,
    "noEmit": false
  },
  "include": [
    "index.ts",
    "components/**/*",
    "hooks/**/*",
    "lib/**/*",
    "providers/**/*",
    "types/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "stories",
    ".storybook",
    "**/*.test.*",
    "**/*.spec.*"
  ]
}
